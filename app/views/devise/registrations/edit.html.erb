<div class='flex flex-col min-w-[480px] max-w-[640px] p-10 border-2 border-slate-900 mx-auto rounded-lg my-4 bg-white'>

  <h2 class='text-3xl font-bold text-center mb-6'>ユーザー更新</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="flex flex-col mb-4">
      <%= f.label :avatar, "アバター", :class => 'text-lg font-semibold mb-2' %>
      <div class='inline-flex items-center'>
        <% if current_user.avatar.attached? %>
          <%= image_tag(current_user.avatar, style: 'width:48px;height:48px;border-radius:9999px') %>
        <% else %>
          <%= image_tag('/avatar.png', style: 'width:48px;height:48px;border-radius:9999px') %>
        <% end %>      <%= f.file_field :avatar %>
      </div>
    </div>

    <div class="flex flex-col mb-4">
      <%= f.label :email, "メールアドレス", :class => 'text-lg font-semibold mb-2' %>
      <%= f.email_field :email, autocomplete: "email", disabled: true %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="flex flex-col mb-4">
      <%= f.label :name, "名前", :class => 'text-lg font-semibold mb-2' %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="flex flex-col mb-4">
      <%= f.label :password, "パスワード", :class => 'text-lg font-semibold mb-2' %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="flex flex-col mb-4">
      <%= f.label :password_confirmation, "パスワードを認証する", :class => 'text-lg font-semibold mb-2' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="flex flex-col mb-4">
      <%= f.label :current_password, "現在のパスワード", :class => 'text-lg font-semibold mb-2' %>
      <%= f.password_field :current_password, autocomplete: "current-password", required: true %>
    </div>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.submit "更新", :class => 'btn-primary w-full text-lg' %>
  <% end %>
  <span class='my-2'></span>
  <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "btn-ghost w-full bg-red-500 hover:bg-red-600 text-white" %>
</div>