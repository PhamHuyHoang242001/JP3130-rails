<div class='flex flex-col min-w-[480px] max-w-[640px] p-10 border-2 border-slate-900 mx-auto rounded-lg my-4 bg-white'>

  <h2 class='text-3xl font-bold text-center mb-6'>登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="flex flex-col mb-4">
      <%= f.label :name, "名前", :class => 'text-lg font-semibold mb-2' %>
      <%= f.text_field :name, autocomplete: "name", autofocus: true %>
    </div>

    <div class="flex flex-col mb-4">
      <%= f.label :email, "メールアドレス", :class => 'text-lg font-semibold mb-2' %>
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <div class="flex flex-col mb-4">
      <%= f.label :password, "パスワード", :class => 'text-lg font-semibold mb-2' %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="flex flex-col mb-4">
      <%= f.label :password_confirmation, "パスワードを認証する", :class => 'text-lg font-semibold mb-2' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.submit "登録", :class => 'btn-primary w-full' %>
  <% end %>
  <span class='my-4'></span>

  <%= render "devise/shared/links" %>
</div>
