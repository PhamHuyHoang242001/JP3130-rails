<div class='flex flex-col min-w-[480px] max-w-[640px] p-10 border-2 border-slate-900 mx-auto rounded-lg my-4 bg-white'>

  <h2 class='text-3xl font-bold text-center mb-6'>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="flex flex-col mb-4">
      <%= f.label :email, "メールアドレス", :class => 'text-lg font-semibold mb-2' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="flex flex-col mb-4">
      <%= f.label :password, "パスワード", :class => 'text-lg font-semibold mb-2' %>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "ログインを記憶する" %>
      </div>
    <% end %>
    <%= f.submit "ログイン", :class => 'btn-primary w-full' %>
  <% end %>
  <span class='my-4'></span>
  <%= render "devise/shared/links" %>
</div>
